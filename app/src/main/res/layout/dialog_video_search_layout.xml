<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="600dp"
    android:layout_height="450dp">


    <RelativeLayout
        android:id="@+id/rlDialog"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="#ECECEE"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tvTitle"
            android:textColor="#595757"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:textSize="15sp"
            android:text="视频搜索"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginLeft="10dp"
            android:layout_alignBottom="@id/tvTitle"
            android:layout_toRightOf="@id/tvTitle"
            android:textColor="#a3a2a3"
            android:textSize="15sp"
            android:text="Video Search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <View
            android:id="@+id/vLine"
            android:background="#babbbf"
            android:layout_marginTop="10dp"
            android:layout_below="@id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>



        <EditText
            android:layout_marginLeft="100dp"
            android:layout_marginTop="20dp"
            android:layout_below="@id/vLine"
            android:drawableLeft="@mipmap/common_home"
            android:background="@drawable/search_shape_theme_edittext"
            android:layout_width="200dp"
            android:layout_height="wrap_content" />



    </RelativeLayout>

    <ImageView
        android:layout_alignParentRight="true"
        android:id="@+id/ivCloseDialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/close" />






</RelativeLayout>
