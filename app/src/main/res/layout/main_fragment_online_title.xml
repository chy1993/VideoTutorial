<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.chy.videotutorial.module.main.view.OnlineFragment">

    <LinearLayout
        android:id="@+id/llOnlineVideo"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <com.chy.videotutorial.MyWiew.NoSlideViewPager
            android:id="@+id/vpOnlineVideoPaging"
            android:layout_width="match_parent"
            android:layout_height="400dp" />


        <com.chy.videotutorial.MyWiew.PageNumberView
            android:id="@+id/onLineVideoPageNumberView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />

    </LinearLayout>



    <ImageButton
        android:id="@+id/ibBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"
        android:background="@mipmap/common_home" />



    <ImageButton
        android:id="@+id/ibRefrsh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="50dp"
        android:background="@mipmap/online_video_update" />

</RelativeLayout>
