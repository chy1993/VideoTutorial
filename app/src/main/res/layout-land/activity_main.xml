<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rlMainBG"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/background"
    tools:context="com.chy.videotutorial.module.main.view.MainActivity">


    <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_marginLeft="300dp"
        android:id="@+id/llVideoTypeTab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageButton

            android:id="@+id/ibLeft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/videotype_selector_btn_left" />

        <RadioGroup
            android:id="@+id/rgVideoType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rbAbc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/videotype_selector_radiobutton_abc"
                android:button="@null"
                android:checked="true" />

            <RadioButton
                android:id="@+id/rbGrading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/videotype_selector_radiobutton_grading"
                android:button="@null" />

            <RadioButton
                android:id="@+id/rbWorld"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/videotype_selector_radiobutton_wrold"
                android:button="@null" />

            <RadioButton
                android:id="@+id/rbOnline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/videotype_selector_radiobutton_online"
                android:button="@null" />

        </RadioGroup>

        <ImageButton
            android:id="@+id/ibRight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/videotype_selector_btn_right" />

        <ImageButton
            android:id="@+id/ibSearch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/videotype_selector_btn_search" />

    </LinearLayout>


    <com.chy.videotutorial.MyWiew.NoSlideViewPager
        android:layout_marginTop="90dp"
        android:id="@+id/vpVideoType"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="225dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />


    <LinearLayout
        android:id="@+id/llTeachingVideo"
        android:layout_width="180dp"
        android:layout_height="match_parent"
        android:layout_marginTop="90dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvLeftTVListTitle"
            style="@style/VideoTypeTextView"
            android:text="@string/VideoTutorial" />

        <TextView
            android:id="@+id/tvLeftTVList1"
            style="@style/VideoTypeTextView"
            android:text="" />

        <TextView
            android:id="@+id/tvLeftTVList2"
            style="@style/VideoTypeTextView"
            android:text="" />

        <TextView
            android:id="@+id/tvLeftTVList3"
            style="@style/VideoTypeTextView"
            android:text="" />

        <TextView
            android:id="@+id/tvLeftTVList4"
            style="@style/VideoTypeTextView"
            android:text="" />

        <TextView
            android:id="@+id/tvLeftTVList5"
            style="@style/VideoTypeTextView"
            android:text="" />

        <TextView
            android:id="@+id/tvLeftTVList6"
            style="@style/VideoTypeTextView"
            android:text="" />

        <TextView
            android:id="@+id/tvLeftTVList7"
            style="@style/VideoTypeTextView"
            android:text="" />

        <TextView
            android:id="@+id/tvLeftTVList8"
            style="@style/VideoTypeTextView"
            android:text="" />

        <TextView
            android:id="@+id/tvLeftTVList9"
            style="@style/VideoTypeTextView"
            android:text="" />


    </LinearLayout>


    <ImageView
        android:visibility="gone"
        android:id="@+id/ivRefresh"
        android:layout_centerInParent="true"
        android:layout_width="100dp"
        android:layout_height="100dp" />


</RelativeLayout>
